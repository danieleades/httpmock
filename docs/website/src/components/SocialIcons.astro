---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/SocialIcons.astro';
---

<div class="social-icons-wrapper">
    <div class="github-star-button">
        <a 
            class="github-button" 
            href="https://github.com/httpmock/httpmock" 
            data-icon="octicon-star" 
            data-show-count="true" 
            aria-label="Star httpmock/httpmock on GitHub"
        ></a>
    </div>
    <Default {...Astro.props} />
</div>

<script async defer src="https://buttons.github.io/buttons.js"></script>

<style>
    .social-icons-wrapper {
        display: flex;
        align-items: center;
        gap: 1rem;
        height: 100%;
    }
    .github-star-button {
        display: flex;
        align-items: center;
        line-height: 0;
        min-width: 2rem;
    }
    
    .github-star-button a {
        text-decoration: none;
    }
    
    /* Ensure the iframe doesn't have any bottom margin from being an inline element */
    .github-star-button :global(iframe) {
        display: block;
    }
    
    /* Hide the stars on small screens if they take too much space */
    @media (max-width: 450px) {
        .github-star-button {
            display: none;
        }
    }
</style>
